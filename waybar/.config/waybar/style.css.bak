@import "colors.css";

/*@import "mode.css";*/
#backlight,
#battery,
#cpu,
#disk,
#idle_inhibitor,
#keyboard-state,
#pulseaudio,
#clock,
#tags,
#language,
#memory,
#network,
#sndio,
#mode,
#window,
#workspaces,
#temperature,
#taskbar,
#workspaces,
{
background: @background;
color: @foreground;
font-size: 17px;
}

* {
    font-family: "Zed Mono Nerd Font";
    font-size: 17px;
}


window#waybar {
    background-color: @color1;
    color: @foreground;
    font-size: 12px;
}


.modules-left {
    background-color: @color0;
    padding: 0px 0px 0px 0px;
}


.modules-right {
    background-color: @color0;
    padding: 0px 5px 0px 5px;
    margin: 0px 5px;
}

#workspaces {
    font-size: 20px;
}


#workspaces button {
    font-size: 13px;
    padding: 0px 8px 0px 8px;
    min-width: 1px;
}

#workspaces button.empty {
    color: @foreground;
}

#workspaces button.visible {
    font-size: 20px;
    padding: 0px 8px 0px 8px;
    min-width: 1px;
    color: #ea6962;
}

#workspaces button.focused {
    font-size: 20px;
    padding: 0px 8px 0px 8px;
    padding: 0px 8px 0px 8px;
    background-color: @color1;
    color: @foreground;
}

#workspaces button.active {
    font-size: 20px;
    padding: 0px 8px 0px 8px;
    background-color: @color1;
    color: @forground;
}


#custom-nowplaying,
#window {
    font-size: 18px;
    color: @color0;
    background-color: @color1;
    padding: 0px 10px 0px 10px;
}


window#waybar.empty #window {
    font-size: 13px;
    background-color: transparent;
    color: transparent;
}


window#waybar.empty {
    font-size: 13px;
    background-color: @color0;
}


#cpu,
#clock {
    margin: 0px 8px 0px 8px;
    background-color: @color0;
    color: @foreground;
}


